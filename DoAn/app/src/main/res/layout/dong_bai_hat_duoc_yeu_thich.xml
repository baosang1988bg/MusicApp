<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewBaiHatDuocYeuThich"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#05378E"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textviewTenBaiHatDuocYeuThich"
        android:layout_toRightOf="@+id/imageviewBaiHatDuocYeuThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#569EDD"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/textviewTenCaSiBaiHatDuocYeuThich"
        android:layout_below="@+id/textviewTenBaiHatDuocYeuThich"
        android:layout_toRightOf="@+id/imageviewBaiHatDuocYeuThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageviewLuotThich"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>